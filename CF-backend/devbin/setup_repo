#!/bin/sh

DEVBIN=`dirname $0`

cd $DEVBIN/..


#--------------------------------------------------------------------------
# create the virtual env area from the requirements.txt file
# which is generated by "pip freeze"
#--------------------------------------------------------------------------
if [ -e env ] ; then
   if [ -e env.bk ] ; then
      rm -rf env.bk > /dev/null 2>&1
   fi
   mv env env.bk
fi

virtualenv --no-site-packages --distribute env && source env/bin/activate && pip install -r requirements.txt

